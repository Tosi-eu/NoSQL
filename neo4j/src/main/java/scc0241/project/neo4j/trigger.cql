CALL apoc.trigger.install(  'socialnetwork',    'atualiza_contadores',  "UNWIND $createdRelationships AS r   WITH r   WHERE type(r) IN ['FRIEND', 'POSTED', 'COMMENTED']    MATCH (user:User)-[rel]->(target)   WHERE rel = r   WITH user, type(r) AS relationshipType   OPTIONAL MATCH (user)-[relCheck]->()   WHERE type(relCheck) = relationshipType   WITH user, relationshipType, count(relCheck) AS countRel   SET user += CASE        WHEN relationshipType = 'FRIEND' AND (user.amigos IS NULL OR user.amigos <> countRel) THEN {amigos: countRel}       WHEN relationshipType = 'POSTED' AND (user.posts IS NULL OR user.posts <> countRel) THEN {posts: countRel}       WHEN relationshipType = 'COMMENTED' AND (user.comments IS NULL OR user.comments <> countRel) THEN {comments: countRel}       ELSE {}     END",   {});